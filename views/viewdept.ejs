<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script type="text/javascript" src='/ajax.js'></script>
</head>
<body>
    <%-include ("home.ejs")%>
    <br><br>
    
    <div class="container p-5 bg-dark">
        <div class="form-group">
            <input type="text" name="name"  class="form-control" onkeyup="SearchDept(this.value)"/> <!--searchDept is come from ajax file-->
        </div>
    <table class="table table-info p-5">
        <tr>
            <th>Sr.No</th>
            <th>Dept Name</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        <tbody id="tblBody">
        <%
        if(deptList.length!=0)
        {
           deptList.forEach((row,index)=>{
        %>
        <tr>
            <td><%=index+1%></td>
            <td><%=row.deptname%></td>
            <td><a href="/deldept?did=<%= row.deptid %>">DELETE</a></td>
            <td><a href="/upddept?dn=<%= row.deptname %>&did=<%= row.deptid %>">UPDATE</a></td>
        </tr>
        <%
           });
        }else
        {
        %>  
           <tr><td colspan="4">No Data Present In Department Table</td></tr>
        <%
        }
        %>
        </tbody>
    </table>
    </div>
</body>
</html>